{% extends 'base.html.twig' %}

{% block title %}Hello Transform Method!{% endblock %}

{% block body %}

<div class="max-w-screen-xl mx-auto my-20 p-8 bg-white border border-gray-300 shadow-xl">
    <h1 class="text-2xl text-gray-700">Hello {{ name }}</h1>
    <h2 class="text-xl text-green-700 mt-6">
    {% if output %}
        Output: {{ output }}
    {% endif %}
    </h2>

    <form method="post" action="{{ path('transform') }}">

        <input
                type="text"
                name="input"
                placeholder="Input message"
                class="mt-8 mx-2 h-10 border border-gray-400 focus:outline-none focus:border-blue-400 px-4 w-96"
        >
        <select
                name="do"
                class="mt-8 mx-2 h-10 border border-gray-400 focus:outline-none focus:border-blue-400 px-4 w-96 appearance-none"
        >
            <option value="upper">Capitalize</option>
            <option value="dash">Dash</option>
        </select>
        <input type="submit" name="submit" value="Submit" class="mt-8 mx-2 h-10 border border-blue-600 bg-blue-500 hover:bg-blue-600 text-white focus:outline-none focus:border-blue-400 px-4 w-32">
    </form>

    <ul class="mt-20">
        <li class="inline-block mx-4 py-4">
            <a href="{{ path('showMyName') }}"
               class="text-gray-500 hover:text-gray-800"
            >Home</a>
        </li>
        <li class="inline-block mx-4 py-4">
            <a href="{{ path('aboutMe') }}"
               class="text-gray-500 hover:text-gray-800"
            >About me</a>
        </li>
        <li class="inline-block mx-4 py-4">
            <a href="{{ path('transform') }}"
               class="text-blue-500 hover:text-blue-500"
            >Transform</a>
        </li>
    </ul>
</div>
{% endblock %}
